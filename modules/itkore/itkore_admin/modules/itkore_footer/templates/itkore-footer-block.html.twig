{#
/**
 * @file
 * Display of footer
 *
 * Available variables:
 * - contact_text: Rendered html of the footer.
 * - footer_text: Rendered html of the footer.
 * - menus: An array containing rendered menus.
 */
#}
<div class="footer">
  <div class="footer--text">
    {{ footer_text }}
    {{ render_menu('main') }}
  </div>
  {% if menus %}
    <div class="footer--menus">
      {% for item in menus %}
        {% if item %}
          <div class="menu">
            {{ render_menu('main') }}
            {{ item }}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
</div>
